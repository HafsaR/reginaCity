          a.btn.btn-dark.btn-social.mx-2(href='https://twitter.com/cityofregina?lang=en')
            i.fab.fa-twitter
          a.btn.btn-dark.btn-social.mx-2(href='https://www.facebook.com/CityRegina/?rf=979980922057733')
            i.fab.fa-facebook-f
          a.btn.btn-dark.btn-social.mx-2(href='https://www.linkedin.com/company/city-of-regina/?originalSubdomain=ca')
            i.fab.fa-linkedin-in
        

    
